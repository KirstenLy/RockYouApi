selectVideoAuthors:
SELECT
    Author.id AS authorID,
    Author.name AS authorName
FROM
    RelationVideoAndAuthor
JOIN
    Author
    ON
    RelationVideoAndAuthor.authorID = Author.id
WHERE
    RelationVideoAndAuthor.videoID = :videoID;



selectVideosAuthorList:
SELECT
    RelationVideoAndAuthor.videoID AS videoID,
    Author.id AS authorID,
    Author.name AS authorName
FROM
    RelationVideoAndAuthor
JOIN
    Author
    ON
    RelationVideoAndAuthor.authorID = Author.id
WHERE
    RelationVideoAndAuthor.videoID IN :videoIDList
ORDER BY
    Author.id DESC;



