selectVideoTags:
SELECT
    RelationVideoAndTag.tagID AS tagID,
    TagTranslation.translation AS tagTranslation
FROM
    RelationVideoAndTag
JOIN
    TagTranslation
ON
    TagTranslation.tagID = RelationVideoAndTag.tagID
WHERE
    RelationVideoAndTag.videoID = :videoID AND TagTranslation.envID = :environmentLangID
ORDER BY
    RelationVideoAndTag.tagID ASC;



selectVideosTagList:
SELECT
    RelationVideoAndTag.videoID AS videoID,
    RelationVideoAndTag.tagID AS tagID,
    TagTranslation.envID AS tagLangID,
    TagTranslation.translation AS tagTranslation
FROM
    RelationVideoAndTag
JOIN
    TagTranslation
ON
    TagTranslation.tagID = RelationVideoAndTag.tagID
WHERE
    RelationVideoAndTag.videoID IN :videoIDList AND TagTranslation.envID = :environmentLangID;