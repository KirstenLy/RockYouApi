selectVideoBaseInfo:
SELECT
    ContentRegister.id AS registerID,
    Video.title AS title,
    Video.url AS url,
    User.id AS userID,
    User.name AS userName,
    Video.languageID AS baseLanguageID,
    Video.rating AS rating,
    (SELECT COUNT(*) FROM Comment WHERE Comment.contentID = ContentRegister.id) AS commentsCount
FROM
    ContentRegister
JOIN
    Video ON ContentRegister.id = Video.id
JOIN
    User ON User.id = Video.userID
WHERE
    ContentRegister.id = :videoID;



selectLastBaseInfoListWithLangID:
SELECT
    ContentRegister.id AS registerID,
    Video.title AS title,
    Video.url AS url,
    User.id AS userID,
    User.name AS userName,
    Video.languageID AS baseLanguageID,
    Video.rating AS rating,
    (SELECT COUNT(*) FROM Comment WHERE Comment.contentID = ContentRegister.id) AS commentsCount
FROM
    ContentRegister
JOIN
    Video ON ContentRegister.id = Video.id
JOIN
    User ON User.id = Video.userID
WHERE
    ContentRegister.contentType = 2
    AND
    Video.languageID = :langID
ORDER BY
    ContentRegister.id DESC
LIMIT
    :limit
OFFSET
    :offset;



