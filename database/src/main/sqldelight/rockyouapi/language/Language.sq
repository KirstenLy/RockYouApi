-- CREATE TABLE Language (
--   id TINYINT UNSIGNED NOT NULL PRIMARY KEY,
--   isDefault BOOLEAN NOT NULL
-- );



selectAll:
SELECT
    *
FROM
    Language;



selectAllWithTranslations:
SELECT
    Language.id AS id,
    Language.isDefault AS isDefault,
    LanguageTranslation.langID AS langID,
    LanguageTranslation.envID AS envID,
    LanguageTranslation.translation AS translation
FROM
    Language
INNER JOIN
    LanguageTranslation
    ON
    LanguageTranslation.langID = Language.id;